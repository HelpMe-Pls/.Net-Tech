@model WebBanHang.Models.TaiKhoan
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/Layout_3.cshtml";
}



<div id="page-content" class="single-page">
    <div class="container">
        
        <div class="row">
            <div class="col-md-6">
                <div class="heading"><h2>Tạo tài khoản</h2></div>
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="TenDangNhap" class="control-label">Tên tài khoản</label>
                        <input asp-for="TenDangNhap" class="form-control" required/>
                        <div class="text-danger">@ViewBag.UsernameErr</div>
                    </div>
                    <div class="form-group">
                        <label asp-for="MatKhau" class="control-label">Mật khẩu</label>
                        <input asp-for="MatKhau" class="form-control" required/>
                        <span asp-validation-for="MatKhau" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-1" name="login" id="login">Đăng ký</button>
                </form>
            </div>
        </div>
    </div>
</div>